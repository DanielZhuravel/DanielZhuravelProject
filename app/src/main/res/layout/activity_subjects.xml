<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".ActivitySubjects">

    <ImageButton
        android:id="@+id/fromSubjectstoGrades"
        android:layout_width="80dp"
        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="toGrades"
        android:scaleType="fitCenter"
        android:src="@drawable/grades_img"
        android:text="Grades"
        app:layout_constraintEnd_toEndOf="@+id/btnHomeWork"
        app:layout_constraintStart_toStartOf="@+id/btnHomeWork"
        app:layout_constraintTop_toBottomOf="@+id/HomeWork" />

    <ImageButton
        android:id="@+id/btnHomeWork"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="toHomeWork"
        android:scaleType="fitCenter"
        android:src="@drawable/hw_img"
        android:text="Home Work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtitleSubjects" />

    <ImageButton
        android:id="@+id/btnFromSubjectsToSummaries"
        android:layout_width="116dp"
        android:layout_height="106dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:onClick="toSummaries"
        android:scaleType="fitCenter"
        android:src="@drawable/summaries_img"
        android:text="Summaries"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fromSubjectstoGrades"
        app:layout_constraintStart_toStartOf="@+id/fromSubjectstoGrades"
        app:layout_constraintTop_toBottomOf="@+id/tvGradesfromSubjects"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/tvtitleSubjects"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginTop="76dp"
        android:background="#D6D5D5"
        android:gravity="center"
        android:text="Subjects"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HomeWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Homework"
        app:layout_constraintEnd_toEndOf="@+id/btnHomeWork"
        app:layout_constraintStart_toStartOf="@+id/btnHomeWork"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeWork" />

    <TextView
        android:id="@+id/tvGradesfromSubjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Grades"
        app:layout_constraintEnd_toEndOf="@+id/fromSubjectstoGrades"
        app:layout_constraintStart_toStartOf="@+id/fromSubjectstoGrades"
        app:layout_constraintTop_toBottomOf="@+id/fromSubjectstoGrades" />

    <TextView
        android:id="@+id/tvSummariesfromSubjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Summaries"
        app:layout_constraintEnd_toEndOf="@+id/btnFromSubjectsToSummaries"
        app:layout_constraintStart_toStartOf="@+id/btnFromSubjectsToSummaries"
        app:layout_constraintTop_toBottomOf="@+id/btnFromSubjectsToSummaries" />
</androidx.constraintlayout.widget.ConstraintLayout>